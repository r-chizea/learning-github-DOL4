pipeline {
    agent any

    stages {
        stage('Prep') {
            steps {
                // example of echo directive
                echo 'Grap file from a Git repo'
                // example of git directive
                git branch: 'main', url: 'https://github.com/r-chizea/learning-github-DOL4.git'
        stage('list') {
            steps {
                sh "ls"
            }
        }
        stage('display') {
            steps {
                sh "pwd"
            }
        }
        stage('create') {
            steps {
                sh "touch testFile"
            }
        }
        stage('write') {
            steps {
                echo 'This is a test'
            }
        }
        stage('move') {
            steps {
                sh "mv testFile jenkins"
            }
        }
    }
}